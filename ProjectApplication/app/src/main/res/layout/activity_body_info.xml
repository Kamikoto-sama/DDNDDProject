<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BodyInfoActivity">

    <LinearLayout
            android:id="@+id/body_type_text_layout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/body_info_text_background"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp">
        <TextView
                android:id="@+id/body_type_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/usual_intro_text"
                android:text="Название типа"
                android:textAllCaps="false"
                android:textSize="36sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
        />
        <TextView
                android:id="@+id/body_type_type_and_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/usual_intro_text"
                android:text="Рост. Тип тела"
                android:textAllCaps="false"
                android:textSize="27sp"
                android:layout_marginLeft="10dp"
        />
    </LinearLayout>

    <ImageView
            android:id="@+id/body_info_image1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.46"
            app:layout_constraintHeight_percent="0.2"
            android:src="@drawable/activity_background_gradient_1"
            android:layout_margin="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/body_type_text_layout"
    />

    <ImageView
            android:id="@+id/body_info_image2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.46"
            app:layout_constraintHeight_percent="0.2"
            android:src="@drawable/activity_background_gradient_1"
            android:layout_margin="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/body_type_text_layout"
    />

    <ImageView
            android:id="@+id/body_info_image3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.46"
            app:layout_constraintHeight_percent="0.2"
            android:src="@drawable/activity_background_gradient_1"
            android:layout_margin="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/body_info_image1"
    />

    <ImageView
            android:id="@+id/body_info_image4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.46"
            app:layout_constraintHeight_percent="0.2"
            android:src="@drawable/activity_background_gradient_1"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/body_info_image2"
            app:layout_constraintRight_toRightOf="parent"
    />

    <TextView
            android:id="@+id/body_type_exercise_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.1"
            android:background="@drawable/body_info_text_background"
            app:layout_constraintTop_toBottomOf="@id/body_info_image3"
            android:layout_margin="5dp"
            android:text="  Упражнения: "
            style="@style/usual_intro_text"
            android:textSize="35sp"
            android:textAllCaps="false"
            android:gravity="left|center"
    />

    <Button
            android:id="@+id/confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/body_info_text_background"
            android:text="выбрать"
            style="@style/usual_intro_text"
            android:textSize="30sp"
            android:layout_margin="10dp"
    />

</android.support.constraint.ConstraintLayout>