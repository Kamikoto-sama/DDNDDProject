<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TrainingProgramActivity">

    <TextView
            android:id="@+id/title_text"
            style="@style/title_text"
            android:text="прогресс"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
    />

    <TextView
            android:id="@+id/title_days_text"
            style="@style/title_text"
            android:text="дни"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

    <TextView
            android:id="@+id/title_exercise_text"
            style="@style/title_text"
            android:text="упражнения"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_text"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"/>

    <com.brkckr.circularprogressbar.CircularProgressBar
            android:id="@+id/progress_days_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.2"
            app:cpbProgressColor="#0af"
            app:cpbBackgroundColor="#0af"
            app:cpbProgressWidth="20dp"
            app:cpbProgressValue="50"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/progress_exercises_bar"
            app:layout_constraintTop_toBottomOf="@id/title_days_text"
            android:layout_margin="10dp"/>

    <TextView
            android:id="@+id/progress_days_bar_text"
            style="@style/usual_text"
            android:text="50%"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="@id/progress_days_bar"
            app:layout_constraintRight_toRightOf="@id/progress_days_bar"
            app:layout_constraintTop_toTopOf="@id/progress_days_bar"
            app:layout_constraintBottom_toBottomOf="@id/progress_days_bar"
            android:layout_marginBottom="20dp"/>

    <com.brkckr.circularprogressbar.CircularProgressBar
            android:id="@+id/progress_exercises_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.3"
            app:cpbProgressColor="#0af"
            app:cpbBackgroundColor="#0af"
            app:cpbProgressValue="40"
            app:cpbProgressWidth="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_exercise_text"
            app:layout_constraintLeft_toRightOf="@id/progress_days_bar"
            android:layout_margin="10dp"/>

    <TextView
            android:id="@+id/progress_exercises_bar_text"
            style="@style/usual_text"
            android:text="40%"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="@id/progress_exercises_bar"
            app:layout_constraintRight_toRightOf="@id/progress_exercises_bar"
            app:layout_constraintTop_toTopOf="@id/progress_exercises_bar"
            app:layout_constraintBottom_toBottomOf="@id/progress_exercises_bar"
            android:layout_marginBottom="20dp"/>
    <LinearLayout
            android:id="@+id/workout_btn_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/progress_exercises_bar">
        <Button
                android:id="@+id/workout_btn_1"
                style="@style/workout_btn"
                android:text="1"
        />
        <Button
                android:id="@+id/workout_btn_2"
                style="@style/workout_btn"
                android:text="2"
        />
        <Button
                android:id="@+id/workout_btn_3"
                style="@style/workout_btn"
                android:text="3"
        />
        <Button
                android:id="@+id/workout_btn_4"
                style="@style/workout_btn"
                android:text="4"
        />
        <Button
                android:id="@+id/workout_btn_5"
                style="@style/workout_btn"
                android:text="5"
        />
        <Button
                android:id="@+id/workout_btn_6"
                style="@style/workout_btn"
                android:text="6"
        />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/workout_btn_layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/workout_btn_layout_1">
        <Button
                android:id="@+id/workout_btn_7"
                style="@style/workout_btn"
                android:text="7"
        />
        <Button
                android:id="@+id/workout_btn_8"
                style="@style/workout_btn"
                android:text="8"
        />
        <Button
                android:id="@+id/workout_btn_9"
                style="@style/workout_btn"
                android:text="9"
        />
        <Button
                android:id="@+id/workout_btn_10"
                style="@style/workout_btn"
                android:text="10"
        />
        <Button
                android:id="@+id/workout_btn_11"
                style="@style/workout_btn"
                android:text="11"
        />
        <Button
                android:id="@+id/workout_btn_12"
                style="@style/workout_btn"
                android:text="12"
        />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/workout_btn_layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/workout_btn_layout_2">
        <Button
                android:id="@+id/workout_btn_13"
                style="@style/workout_btn"
                android:text="13"
        />
        <Button
                android:id="@+id/workout_btn_14"
                style="@style/workout_btn"
                android:text="14"
        />
        <Button
                android:id="@+id/workout_btn_15"
                style="@style/workout_btn"
                android:text="15"
        />
        <Button
                android:id="@+id/workout_btn_16"
                style="@style/workout_btn"
                android:text="16"
        />
        <Button
                android:id="@+id/workout_btn_17"
                style="@style/workout_btn"
                android:text="17"
        />
        <Button
                android:id="@+id/workout_btn_18"
                style="@style/workout_btn"
                android:text="18"
        />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/workout_btn_layout_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/workout_btn_layout_3">
        <Button
                android:id="@+id/workout_btn_19"
                style="@style/workout_btn"
                android:text="19"
        />
        <Button
                android:id="@+id/workout_btn_20"
                style="@style/workout_btn"
                android:text="20"
        />
        <Button
                android:id="@+id/workout_btn_21"
                style="@style/workout_btn"
                android:text="21"
        />
        <Button
                android:id="@+id/workout_btn_22"
                style="@style/workout_btn"
                android:text="22"
        />
        <Button
                android:id="@+id/workout_btn_23"
                style="@style/workout_btn"
                android:text="23"
        />
        <Button
                android:id="@+id/workout_btn_24"
                style="@style/workout_btn"
                android:text="24"
        />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/workout_btn_layout_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/workout_btn_layout_4">
        <Button
                android:id="@+id/workout_btn_25"
                style="@style/workout_btn"
                android:text="25"
        />
        <Button
                android:id="@+id/workout_btn_26"
                style="@style/workout_btn"
                android:text="26"
        />
        <Button
                android:id="@+id/workout_btn_27"
                style="@style/workout_btn"
                android:text="27"
        />
        <Button
                android:id="@+id/workout_btn_28"
                style="@style/workout_btn"
                android:text="28"
        />
        <Button
                android:id="@+id/workout_btn_29"
                style="@style/workout_btn"
                android:text="29"
        />
        <Button
                android:id="@+id/workout_btn_30"
                style="@style/workout_btn"
                android:text="30"
        />
    </LinearLayout>

    <Button
            android:id="@+id/start_workout_btn"
            style="@style/title_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.09"
            android:background="@drawable/begin_workout_button_shape"
            android:text="начать"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</android.support.constraint.ConstraintLayout>