<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstLaunchSliderActivity">
    <android.support.v4.view.ViewPager
            android:id="@+id/intro_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/divider"/>
    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_above="@id/button_layout"/>
    <RelativeLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
        <Button
                android:id="@+id/intro_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="назад"
                android:textSize="17sp"
                android:background="@null"
                android:visibility="invisible"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">
            <TextView
                    android:id="@+id/intro_indicator1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="50sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/intro_indicator2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="50sp"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/intro_indicator3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="50sp"
                    android:textStyle="bold"/>
        </LinearLayout>
        <Button
                android:id="@+id/intro_btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="дальше"
                android:textSize="17sp"
                android:layout_alignParentEnd="true"
                android:background="@null"/>
    </RelativeLayout>


</RelativeLayout>