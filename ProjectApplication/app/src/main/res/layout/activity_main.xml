<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/title_text"
            style="@style/title_text"
            android:text="прогресс"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
    />

    <TextView
            android:id="@+id/title_days_text"
            style="@style/title_text"
            android:text="дни"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

    <TextView
            android:id="@+id/title_exercise_text"
            style="@style/title_text"
            android:text="упражнения"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_text"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"/>

    <com.brkckr.circularprogressbar.CircularProgressBar
            android:id="@+id/progress_days_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.2"
            app:cpbProgressColor="@color/red"
            app:cpbBackgroundColor="#0000"
            app:cpbProgressWidth="20dp"
            app:cpbProgressValue="50"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/progress_exercises_bar"
            app:layout_constraintTop_toBottomOf="@id/title_days_text"
            android:layout_margin="10dp"/>

    <TextView
            android:id="@+id/progress_days_bar_text"
            style="@style/usual_text"
            android:text="50%"
            app:layout_constraintLeft_toLeftOf="@id/progress_days_bar"
            app:layout_constraintRight_toRightOf="@id/progress_days_bar"
            app:layout_constraintTop_toTopOf="@id/progress_days_bar"
            app:layout_constraintBottom_toBottomOf="@id/progress_days_bar"
            android:layout_marginBottom="20dp"
    />
    <com.brkckr.circularprogressbar.CircularProgressBar
            android:id="@+id/progress_exercises_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.3"
            app:cpbProgressColor="@color/red"
            app:cpbBackgroundColor="#0000"
            app:cpbProgressValue="70"
            app:cpbProgressWidth="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_exercise_text"
            app:layout_constraintLeft_toRightOf="@id/progress_days_bar"
            android:layout_margin="10dp"/>

    <TextView
            android:id="@+id/progress_exercises_bar_text"
            style="@style/usual_text"
            android:text="70%"
            app:layout_constraintLeft_toLeftOf="@id/progress_exercises_bar"
            app:layout_constraintRight_toRightOf="@id/progress_exercises_bar"
            app:layout_constraintTop_toTopOf="@id/progress_exercises_bar"
            app:layout_constraintBottom_toBottomOf="@id/progress_exercises_bar"
            android:layout_marginBottom="20dp"
    />

    <android.support.constraint.ConstraintLayout
            android:id="@+id/first_buttons_layout"
            android:layout_width="match_parent" android:layout_height="0dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintTop_toBottomOf="@id/progress_exercises_bar"
            android:background="@drawable/activity_background_gradient_1">
        <Button
                android:id="@+id/workout_choose_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.15"
                android:background="@drawable/choose_workout_button_shape"
                android:text="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/workout_choose_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:id="@+id/workout_choose_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.15"
                android:background="@drawable/choose_workout_button_shape"
                android:text="2"
                app:layout_constraintLeft_toRightOf="@id/workout_choose_1"
                app:layout_constraintRight_toLeftOf="@id/workout_choose_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:id="@+id/workout_choose_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.15"
                android:background="@drawable/choose_workout_button_shape"
                android:text="3"
                app:layout_constraintLeft_toRightOf="@id/workout_choose_2"
                app:layout_constraintRight_toLeftOf="@id/workout_choose_4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:id="@+id/workout_choose_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.15"
                android:background="@drawable/choose_workout_button_shape"
                android:text="4"
                app:layout_constraintLeft_toRightOf="@id/workout_choose_3"
                app:layout_constraintRight_toLeftOf="@id/workout_choose_5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:id="@+id/workout_choose_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.15"
                android:background="@drawable/choose_workout_button_shape"
                android:text="5"
                app:layout_constraintLeft_toRightOf="@id/workout_choose_4"
                app:layout_constraintRight_toLeftOf="@id/workout_choose_6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:id="@+id/workout_choose_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.15"
                android:background="@drawable/choose_workout_button_shape"
                android:text="6"
                app:layout_constraintLeft_toRightOf="@id/workout_choose_5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/second_buttons_layout"
            android:layout_width="match_parent" android:layout_height="0dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintTop_toBottomOf="@id/first_buttons_layout"
            android:background="@drawable/activity_background_gradient_1">
        <Button
                android:id="@+id/workout_choose_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.15"
                android:background="@drawable/choose_workout_button_shape"
                android:text="7"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/workout_choose_8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:id="@+id/workout_choose_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.15"
                android:background="@drawable/choose_workout_button_shape"
                android:text="8"
                app:layout_constraintLeft_toRightOf="@id/workout_choose_7"
                app:layout_constraintRight_toLeftOf="@id/workout_choose_9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:id="@+id/workout_choose_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.15"
                android:background="@drawable/choose_workout_button_shape"
                android:text="9"
                app:layout_constraintLeft_toRightOf="@id/workout_choose_8"
                app:layout_constraintRight_toLeftOf="@id/workout_choose_10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:id="@+id/workout_choose_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.15"
                android:background="@drawable/choose_workout_button_shape"
                android:text="10"
                app:layout_constraintLeft_toRightOf="@id/workout_choose_9"
                app:layout_constraintRight_toLeftOf="@id/workout_choose_11"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:id="@+id/workout_choose_11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.15"
                android:background="@drawable/choose_workout_button_shape"
                android:text="11"
                app:layout_constraintLeft_toRightOf="@id/workout_choose_10"
                app:layout_constraintRight_toLeftOf="@id/workout_choose_12"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:id="@+id/workout_choose_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.15"
                android:background="@drawable/choose_workout_button_shape"
                android:text="12"
                app:layout_constraintLeft_toRightOf="@id/workout_choose_11"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <com.kevalpatel2106.rulerpicker.RulerValuePicker
            android:id="@+id/fuckfuckfuck"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/holo_orange_dark"
            app:indicator_color="@android:color/white"
            app:indicator_interval="14dp"
            app:indicator_width="2dp"
            app:notch_color="@android:color/white"
            app:ruler_text_size="6sp"
            app:max_value="147"
            app:min_value="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/second_buttons_layout"
            android:layout_marginTop="10dp"/>

    <com.kevalpatel2106.rulerpicker.RulerValuePicker
            android:id="@+id/fuckfuckfuckfuck"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#a0aa0a"
            app:indicator_color="@android:color/white"
            app:indicator_interval="14dp"
            app:indicator_width="2dp"
            app:max_value="147"
            app:min_value="0"
            app:notch_color="@android:color/white"
            app:ruler_text_size="6sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fuckfuckfuck"
            android:layout_marginTop="20dp"/>

</android.support.constraint.ConstraintLayout>