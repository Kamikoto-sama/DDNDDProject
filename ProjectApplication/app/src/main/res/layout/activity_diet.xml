<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".DietActivity"
    android:background="@drawable/activity_background_gradient_1">

        <android.support.constraint.ConstraintLayout
                android:id="@+id/diet_activity_image1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/diet_activity_image_background"
        >
            <TextView
                    android:id="@+id/diet_activity_image_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/usual_intro_text"
                    android:text="Правила питания"
                    android:textSize="23sp"
                    android:textAllCaps="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="20dp"
            />

            <ImageView
                    android:id="@+id/diet_activity_image_image1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintWidth_percent="0.4"
                    app:layout_constraintHeight_percent="0.7"
                    android:src="@drawable/diet_activity_image1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"/>

        </android.support.constraint.ConstraintLayout>

        <TextView
                android:id="@+id/diet_activity_text1"
                style="@style/diet_texts"
                app:layout_constraintTop_toBottomOf="@id/diet_activity_image1"
                android:text="@string/diet_text_main"
        />

        <android.support.constraint.ConstraintLayout
                android:id="@+id/diet_activity_image2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/diet_activity_text1"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/diet_activity_image_background"
        >
            <TextView
                    android:id="@+id/diet_activity_image_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/usual_intro_text"
                    android:text="Эктоморф"
                    android:textSize="23sp"
                    android:textAllCaps="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="20dp"
            />

            <ImageView
                    android:id="@+id/diet_activity_image_image2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintWidth_percent="0.4"
                    app:layout_constraintHeight_percent="0.7"
                    android:src="@drawable/diet_activity_image1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"/>
        </android.support.constraint.ConstraintLayout>

        <TextView
                android:id="@+id/diet_activity_text2"
                style="@style/diet_texts"
                app:layout_constraintTop_toBottomOf="@id/diet_activity_image2"
                android:text="@string/diet_text_ekto"
        />

        <android.support.constraint.ConstraintLayout
                android:id="@+id/diet_activity_image3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/diet_activity_text2"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/diet_activity_image_background"
        >
            <TextView
                    android:id="@+id/diet_activity_image_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/usual_intro_text"
                    android:text="Мезоморф"
                    android:textSize="23sp"
                    android:textAllCaps="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="20dp"
            />

            <ImageView
                    android:id="@+id/diet_activity_image_image3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintWidth_percent="0.4"
                    app:layout_constraintHeight_percent="0.7"
                    android:src="@drawable/diet_activity_image1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"/>
        </android.support.constraint.ConstraintLayout>

        <TextView
                android:id="@+id/diet_activity_text3"
                style="@style/diet_texts"
                app:layout_constraintTop_toBottomOf="@id/diet_activity_image3"
                android:text="@string/diet_text_mezo"
        />

        <android.support.constraint.ConstraintLayout
                android:id="@+id/diet_activity_image4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/diet_activity_text3"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/diet_activity_image_background"
        >
            <TextView
                    android:id="@+id/diet_activity_image_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/usual_intro_text"
                    android:text="Эндоморф"
                    android:textSize="23sp"
                    android:textAllCaps="false"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="20dp"
            />

            <ImageView
                    android:id="@+id/diet_activity_image_image4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintWidth_percent="0.4"
                    app:layout_constraintHeight_percent="0.7"
                    android:src="@drawable/diet_activity_image1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"/>
        </android.support.constraint.ConstraintLayout>

        <TextView
                android:id="@+id/diet_activity_text4"
                style="@style/diet_texts"
                app:layout_constraintTop_toBottomOf="@id/diet_activity_image4"
                android:text="@string/diet_text_endo"
        />


    </android.support.constraint.ConstraintLayout>
</ScrollView>