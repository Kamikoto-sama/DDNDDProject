<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".FirstLaunchSlideTwo"
                                             android:background="@null">

    <ImageView
            android:id="@+id/doctor_angel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/doctor_angel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="fitStart"
    />

    <TextView
            android:id="@+id/doctor_angel_phrase"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.78"
            app:layout_constraintHeight_percent="0.15"
            android:textSize="18sp"
            android:textStyle="normal"
            style="@style/usual_intro_text"
            android:background="@drawable/first_launch_doctor_angel_slider"
            app:layout_constraintLeft_toLeftOf="@id/doctor_angel"
            app:layout_constraintRight_toRightOf="@id/doctor_angel"
            app:layout_constraintTop_toTopOf="@id/doctor_angel"
            app:layout_constraintBottom_toBottomOf="@id/doctor_angel"
            android:layout_marginBottom="50dp"
    />

    <Button
            android:id="@+id/doctor_angel_phrase_btn"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="@drawable/nick_fury_phrase_btn"
            app:layout_constraintRight_toRightOf="@id/doctor_angel_phrase"
            app:layout_constraintTop_toBottomOf="@id/doctor_angel_phrase"
    />

</android.support.constraint.ConstraintLayout>