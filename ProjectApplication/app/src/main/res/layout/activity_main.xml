<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/main_act_body_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            android:background="@drawable/main_act_body_layout_background">

        <ImageView
                android:id="@+id/main_act_body_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="10dp"
                android:src="@drawable/body_mesomorph"
        />
        <TextView
                android:id="@+id/main_act_body_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/main_act_body_image"
                style="@style/usual_intro_text"
                android:textSize="25sp"
                android:text="Имя здесь"
                android:textAllCaps="false"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:gravity="left"


        />
        <TextView
                android:id="@+id/main_act_body_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_act_body_name"
                app:layout_constraintLeft_toRightOf="@id/main_act_body_image"
                style="@style/usual_intro_text"
                android:textSize="25sp"
                android:text="Рост здесь"
                android:textAllCaps="false"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:gravity="left"


        />
        <TextView
                android:id="@+id/main_act_body_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/main_act_body_height"
                app:layout_constraintLeft_toRightOf="@id/main_act_body_image"
                style="@style/usual_intro_text"
                android:textSize="25sp"
                android:text="Тип тела здесь"
                android:textAllCaps="false"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
android:gravity="left"

        />

        <Button
                android:id="@+id/main_act_body_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/main_act_btn_background"
                android:layout_margin="2dp"
                android:paddingRight="3dp"
                android:text="Продолжить"
                android:gravity="right|center"
                style="@style/usual_intro_text"
                android:textSize="24dp"
        />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/main_act_diet_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintTop_toBottomOf="@id/main_act_body_layout"
            android:layout_margin="10dp"
            android:background="@drawable/main_act_diet_background">
        <Button
                android:id="@+id/main_act_diet_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/main_act_diet_btn_background"
                android:layout_margin="2dp"
                android:paddingRight="3dp"
                android:text="Читать"
                android:gravity="right|center"
                style="@style/usual_intro_text"
                android:textSize="24dp"
        />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/main_act_change_program_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintTop_toBottomOf="@id/main_act_diet_layout"
            android:layout_margin="10dp"
            android:background="@drawable/main_act_change_program_background">
        <Button
                android:id="@+id/main_act_change_program_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/main_act_change_btn_background"
                android:layout_margin="2dp"
                android:layout_marginBottom="5dp"
                android:paddingRight="3dp"
                android:text="Сменить"
                android:gravity="right|center"
                style="@style/usual_intro_text"
                android:textSize="24dp"
        />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>