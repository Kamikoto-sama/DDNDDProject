<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TrainingActivity">

    <TextView
            android:id="@+id/workout_activity_text"
            style="@style/title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"/>

    <Button
            android:id="@+id/begin_workout_btn"
            style="@style/title_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.09"
            android:background="@drawable/begin_workout_button_shape"
            android:text="больше кнопок"
            android:layout_margin="10px"
            android:textAllCaps="true"
            app:layout_constraintTop_toTopOf="parent"
    />
    <ScrollView
            app:layout_constraintTop_toBottomOf="@id/begin_workout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/m_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/begin_workout_btn">

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>